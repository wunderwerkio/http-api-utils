{
  "name": "wunderwerkio/http-api-utils",
  "description": "Set of useful HTTP API utilities. Provides json schema validation and error handling.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Wunderwerk\\HttpApiUtils\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Christian Foidl",
      "email": "christian@wunderwerk.io",
      "homepage": "https://wunderwerk.io",
      "role": "Developer"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10",
    "drupal/coder": "^8.3"
  },
  "scripts": {
    "unit": "phpunit tests",
    "phpstan": "phpstan analyse --level 8 src tests",
    "phpcs": "phpcs -s src tests"
  },
  "require": {
    "justinrainbow/json-schema": "^5.2",
    "symfony/http-foundation": "^4 || ^5 || ^6 || ^7",
    "wunderwerkio/jsonapi-error": "^1.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
